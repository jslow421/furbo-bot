# Build Stage
# Uses the .NET 10 SDK to compile the code
FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src
COPY . .

# Publish command optimized for Pi:
# -r linux-arm64: Targets the Pi's architecture
# --self-contained true: Bundles the runtime (no need to install .NET on the Pi OS)
# -p:PublishSingleFile=true: Produces one binary
# -p:PublishTrimmed=true: Removes unused code to shrink the file size
RUN dotnet publish "./ControlNode.csproj" -c Release -r linux-arm64 --self-contained true -p:PublishSingleFile=true -p:PublishTrimmed=true -o /app/publish

# Runtime Stage
# Uses 'runtime-deps' which is very small, containing only native dependencies needed for self-contained apps
FROM mcr.microsoft.com/dotnet/runtime-deps:10.0-bookworm-slim-arm64v8
WORKDIR /app
COPY --from=build /app/publish/ControlNode .

# GPIO access typically requires running the container as privileged or mapping /dev/gpiomem
CMD ["./ControlNode"]